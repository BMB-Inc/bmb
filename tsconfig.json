{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@bmb-inc/types": ["./packages/types/src"],
      "@bmb-inc/types/*": ["./packages/types/src/*"],
      "@bmb-inc/services/*": ["./packages/services/*/src"],
      "@bmb-inc/utils/*": ["./packages/utils/*/src"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "**/dist", "**/node_modules"]
}
