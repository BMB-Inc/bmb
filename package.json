{
  "name": "@bmb-inc/monorepo",
  "description": "BMB Inc monorepo containing shared packages and services.",
  "version": "0.0.10",
  "private": true,
  "author": "BMB Inc",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmb-inc/bmb.git"
  },
  "scripts": {
    "build:all": "yarn workspaces foreach --all --topological-dev run build",
    "clean:all": "yarn workspaces foreach --all --topological-dev run clean",
    "publish:all": "yarn workspaces foreach --all --no-private version patch && yarn workspaces foreach --all --no-private npm publish",
    "publish:types": "yarn workspace @bmb-inc/types npm publish"
  },
  "keywords": [
    "bmb",
    "monorepo",
    "types",
    "services",
    "insurance"
  ],
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "zod": "^3.25.67"
  }
}
